@model PhotoAlbumShare.Models.GalleryDetailModel

<div class="container body-content">
    <div class="row image-detail-container drop-shadow">
        <div class="image-detail">
            <img src="@Model.Url" alt="@Model.Title" />
        </div>
    </div>
    <div class="row image-detail-meta">
        <span>Title: @Model.Title</span>
        <span>Uploaded: @Model.Created</span>
    </div>
    <div lass="row controls">
        <a class="btn btn-primary" asp-controller="Gallery" asp-action="Index">
            Back to Photos
        </a>
    </div>
</div>